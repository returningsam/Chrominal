{
  "manifest_version": 2,
  "name": "ch_term",
  "version": "2.0",
  "description": "A new tab replacement that provides a unix-like interface for
                  bookmark management and quick search functionality.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["assets/background/background.js"]
  },
  "chrome_url_overrides" : {
    "newtab": "assets/content/index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "bookmarks",
    "identity.email",
    "identity"
  ]
}
